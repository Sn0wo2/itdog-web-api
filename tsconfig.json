{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": [
      "ES2022"
    ],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "declarationDir": "dist"
  },
  "include": [
    "src",
    "example"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}