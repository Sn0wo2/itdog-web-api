{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": [
      "ES2022"
    ],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "declarationDir": "dist"
  },
  "exclude": [
    "node_modules",
    "dist",
    "jest.config.ts",
    "tsup.config.ts",
    "commitlint.config.ts",
    "eslint.config.js"
  ]
}